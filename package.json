{
  "name": "vivisector",
  "version": "0.0.0-development",
  "description": "add event listeners to js objects",
  "main": "./dist/vivisector.cjs.js",
  "browser": "./dist/vivisector.umd.js",
  "module": "./dist/vivisector.es.js",
  "types": "dist/vivisector.d.ts",
  "exports": {
    "require": "./dist/vivisector.cjs.js",
    "import": "./dist/vivisector.es.js"
  },
  "engines": {
    "node": ">= 10"
  },
  "files": [
    "dist/"
  ],
  "lint-staged": {
    "lib/**/*.ts": [
      "npm run lint",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "coverage": "jest --coverage && npm run clean",
    "lint": "eslint \"lib/**/*.ts\" --no-fix",
    "lint:fix": "eslint \"lib/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prebuild": "npm run clean",
    "build": "npm run types && rollup -c",
    "clean": "rimraf coverage dist .build",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls && npm run clean",
    "prerelease": "npm pack && tar -xvzf *.tgz && rimraf package *.tgz",
    "semantic-release": "semantic-release",
    "types": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthewZito/vivisector-js.git"
  },
  "keywords": [
    "observable",
    "observables",
    "event-driven",
    "reactive programming",
    "events"
  ],
  "author": "Matthew T Zito (goldmund)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MatthewZito/vivisector-js/issues"
  },
  "homepage": "https://github.com/MatthewZito/vivisector-js#readme",
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.13.9",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@rollup/plugin-typescript": "8.2.5",
    "@types/jest": "27.0.1",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "27.1.0",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.21.0",
    "husky": "4.3.8",
    "jest": "27.1.0",
    "jest-extended": "0.11.5",
    "js-heuristics": "1.1.0",
    "lint-staged": "10.5.4",
    "rimraf": "^3.0.2",
    "rollup": "2.40.0",
    "rollup-plugin-dts": "4.0.0",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "^17.4.1",
    "ts-jest": "27.0.5",
    "tslib": "2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
