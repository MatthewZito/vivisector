{
  "compilerOptions": {
    "target": "es5",                   
    "module": "commonjs",                     
    "lib": ["ESNext"],                            
    "strict": true,    

    "esModuleInterop": true,        

    "baseUrl": "./src",
    "paths": {
      "@/*": ["."]
    },
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true        
  }
}
